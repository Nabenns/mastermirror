<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Analytics - Discord Auto-Forwarder</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>
    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-robot"></i> Discord Auto-Forwarder
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="bi bi-speedometer2 me-1"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/servers">
                            <i class="bi bi-hdd-network me-1"></i> Servers
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/channels">
                            <i class="bi bi-hash me-1"></i> Channels
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logs">
                            <i class="bi bi-journal-text me-1"></i> Logs
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/analytics">
                            <i class="bi bi-graph-up me-1"></i> Analytics
                        </a>
                    </li>
                </ul>
                <div class="d-flex align-items-center">
                    <span class="connection-status <%= isConnected ? 'status-connected' : 'status-disconnected' %>">
                        <i class="bi <%= isConnected ? 'bi-wifi' : 'bi-wifi-off' %>"></i>
                        <%= isConnected ? 'Connected' : 'Disconnected' %>
                    </span>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-4 fade-in">
        <div class="row mb-4">
            <div class="col-12">
                <h2 class="text-light"><i class="bi bi-graph-up me-2"></i>Analytics Dashboard</h2>
                <p class="text-muted">Overview of message forwarding performance and activity.</p>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="card bg-dark border-secondary text-light h-100">
                    <div class="card-body">
                        <h6 class="text-muted text-uppercase small fw-bold">Total Messages</h6>
                        <h2 class="mb-0 display-6 fw-bold">
                            <%= stats.totalMessages %>
                        </h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-dark border-secondary text-light h-100">
                    <div class="card-body">
                        <h6 class="text-muted text-uppercase small fw-bold text-success">Success Rate</h6>
                        <h2 class="mb-0 display-6 fw-bold text-success">
                            <%= stats.successRate %>%
                        </h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-dark border-secondary text-light h-100">
                    <div class="card-body">
                        <h6 class="text-muted text-uppercase small fw-bold text-danger">Errors</h6>
                        <h2 class="mb-0 display-6 fw-bold text-danger">
                            <%= stats.errorCount %>
                        </h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-dark border-secondary text-light h-100">
                    <div class="card-body">
                        <h6 class="text-muted text-uppercase small fw-bold text-info">Active Channels</h6>
                        <h2 class="mb-0 display-6 fw-bold text-info">
                            <%= stats.activeChannels %>
                        </h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts -->
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="card bg-dark border-secondary text-light">
                    <div class="card-header border-secondary">
                        <h5 class="mb-0">Activity (Last 24 Hours)</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="activityChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card bg-dark border-secondary text-light h-100">
                    <div class="card-header border-secondary">
                        <h5 class="mb-0">Top Channels</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="channelsChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Data from server
        const activityData = <% - JSON.stringify(charts.activity) %>;
        const channelsData = <% - JSON.stringify(charts.channels) %>;

        // Activity Chart
        const ctxActivity = document.getElementById('activityChart').getContext('2d');
        new Chart(ctxActivity, {
            type: 'line',
            data: {
                labels: activityData.labels,
                datasets: [{
                    label: 'Messages Forwarded',
                    data: activityData.data,
                    borderColor: '#5865F2',
                    backgroundColor: 'rgba(88, 101, 242, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: { beginAtZero: true, grid: { color: 'rgba(255, 255, 255, 0.1)' } },
                    x: { grid: { display: false } }
                }
            }
        });

        // Channels Chart
        const ctxChannels = document.getElementById('channelsChart').getContext('2d');
        new Chart(ctxChannels, {
            type: 'doughnut',
            data: {
                labels: channelsData.labels,
                datasets: [{
                    data: channelsData.data,
                    backgroundColor: [
                        '#5865F2', '#EB459E', '#FEE75C', '#57F287', '#ED4245'
                    ],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'bottom', labels: { color: '#fff' } }
                }
            }
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>